/**index.wxss**/
.container{
  margin: 0;
  padding: 0;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* .userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
} */
.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.top{
  width: 95%;
  margin: 0 auto;
  position: relative;
}
.search_container{
  width: 100%;
  text-align: center;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1px solid #aaa;
  border-radius: 5px;
  box-sizing: border-box;
  overflow: hidden;
  height: 35px;
}
.search_input{
    width: 80%;
    border: none;
    outline: none;
    font-size: 16px;
    display: inline-block;
    margin: 0 auto;
    text-align: left;
    padding-left: 5px;
    box-sizing: border-box;
    height: 100%;
}
.search_btn{
  width: 20%;
  height:100%;
  display: flex;
  justify-content: center;
  align-items: center;
  border: none!important;
  border-radius: 0; 
  background-color: #ffffff;
  font-size: 16px;
}
.recommend{
  position: absolute;
  width: 100%;
  height: auto;
  top:40px;
  left: 0;
  background-color: #ffffff;
  border-radius: 5px;
  box-shadow: 0 0 5px #aaaaaa;
  overflow: hidden;
  z-index: 999;
}
.rec_item{
  padding: 5px 10px;
  box-sizing: border-box;
  float: left;
  /* background: #efeff4; */
  color: #333;
  border-radius: 20px;
  margin: 5px;
  box-shadow:0 0 2px #bbbbbb;

}
.search_btn::after {
  border: 0;
}
.typeContainer{
  width: 100%;
  height: 100%;
}
.typeTitle{
  width:100%;
  height: 50px;
  display: block;
  line-height: 50px;
  padding-left: 10px;
  box-sizing: border-box;
}
.typeMale,.typeFemale,.typePicture,.typePress{
  width: 100%;
  overflow: hidden;
}
.typeItem{
  width: 33.333333%;
  height: 60px;
  float: left;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
  box-sizing: border-box;
  margin-top: -1px;
  border-top: 1px solid #f8f8f8;
  border-right: 1px solid #f8f8f8;
  border-bottom: 1px solid #f8f8f8;
}
.typeItem text{
  text-align: center;
}
.typeItem .typeName{
  font-size: 15px;
  display: block;
  width: 100%;
  color: #333;
}
.typeItem .typeBookCount{
  font-size: 15px;
  display: block;
  font-size: 12px;
  color: #ccc;
}