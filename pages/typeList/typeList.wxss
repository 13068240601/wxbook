page{
  height: 100%;
}
.section{
  position: relative;
  width: 100%;
  height: 100%;
}
.books_scroll{
  position: absolute;
  width: 100%;
  height: 100%;
  top:0;
  left: 0;
}
.typeList_item{
  width: 100%;
  height: 100px;
  overflow: hidden;
  padding: 10px;
  border-bottom: 1px solid #cccccc;
  box-sizing: border-box;
}
.book_cover_box{
  width: 60px;
  height: 75px;
  float: left;
  /* margin-right: 10px; */
}
.right{
  width: calc(100% - 60px);
  padding-left: 10px;
  height: 100%;
  box-sizing: border-box; 
  float: right;
  display: flex;
  align-items: space-between;
  flex-wrap: wrap;
}
.book_cover{
  width: 100%;
  max-height: 75px;
}
.book_title{
  display: block;
  width: 100%;
  font-size: 14px;
}
.author_majorCate{
  font-size: 12px;
}
.book_shortIntro{
  font-size: 12px;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  align-content: center;
}
.latelyFollower_retentionRatio{
  font-size: 12px;
  display: flex;
}
.latelyFollower_retentionRatio .number{
  color: #b93321;  
}
.book_latelyFollower{
  margin-right: 20px;
}
.book_retentionRatio{
  margin-left: 20px;
}